<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbakgrund"
    tools:context=".Home">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnfave"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/roundedet"
        android:text="Favoritkategori"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/quizOfDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quizOfDay"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/roundedet"
        android:text="Dagens frågesport"
        android:textSize="20dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/categories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createQuiz"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundedet"
        android:text="Skapa frågesport"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categories"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/categories"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/roundedet"
        android:text="Kategorier"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColorHighlight="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.803" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gotoSettings"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>